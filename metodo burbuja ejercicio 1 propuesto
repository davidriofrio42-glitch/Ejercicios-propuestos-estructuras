#include <iostream>

using namespace std;

// Función para imprimir un arreglo
void imprimirArreglo(int arr[], int n) {
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

// Función de burbuja para ordenar en modo descendente
void burbujaDescendente(int lista[], int n) {
    for (int i = 0; i < n - 1; ++i) {
        for (int j = 0; j < n - i - 1; ++j) {
            // Si el elemento actual es MENOR que el siguiente, los intercambiamos
            if (lista[j] < lista[j + 1]) {
                // Intercambio manual
                int temp = lista[j];
                lista[j] = lista[j + 1];
                lista[j + 1] = temp;
            }
        }
    }
}

int main() {
    int numeros[] = {3, 29, 5, 15, 8, 2};
    int n = sizeof(numeros) / sizeof(numeros[0]); // Calculamos el tamaño del arreglo

    cout << "Arreglo original: ";
    imprimirArreglo(numeros, n);

    burbujaDescendente(numeros, n);

    cout << "Arreglo ordenado descendente: ";
    imprimirArreglo(numeros, n);

    return 0;
}
